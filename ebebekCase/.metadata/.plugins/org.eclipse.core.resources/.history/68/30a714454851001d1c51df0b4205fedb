package ebebekSalaryCalculator;

public class EmployeeManager {
public double tax(double maas) {
	if(maas<1000) {
		System.out.println("Vergi uygulanmayacak");
		return maas;
	}
	else if(maas>1000) {
		return maas*3/100;
	}
	
}

public int bonus(int workHours) {
	if (workHours>40) {
		int bonusMaas = (workHours-40)*30;
		return bonusMaas;
		
	} else {

	}
}







}
